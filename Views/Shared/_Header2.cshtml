@{
    var firstname = Context.Request.Cookies["FirstName"];
    var lastname = Context.Request.Cookies["LastName"];
}

<header class="container-fluid p-0  sticky-top ">
    <div class="px-3 Small shadow-sm bg-white d-flex justify-content-between align-items-center sticky-top bg-white align-text-center  ">
        <a class="navbar-brand">
            <img src="~/SRS Screen Shorts/Fig56. Patient site 11.png" alt="" width="100" height="60">
        </a>
        <div class="d-flex justify-content-between align-items-center">
            <p class="mt-2 pt-2">Welcome <strong>@firstname  @lastname </strong></p>
            <button type="button" class="btn btn-outline-info justify-content-center mx-3" onclick="window.location.href = '@Url.Action("PatientLogout", "Patient")';">LogOut</button>
            <button type="button" class="btn btn-outline-info" onclick="darkmode()"><i class="bi bi-moon moon-icon "></i></button>
        </div>
    </div>

    <nav class=" shadow bg-white pt-2  px-3 ">
        <div class="nav nav-underline" id="nav-tab" role="tablist">
            <a class="nav-link active fw-bold" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-dashboard" type="button" role="tab" aria-controls="nav-dashboard" aria-selected="true">
                Dashboard
            </a>
            <a class="nav-link fw-bold" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">
                Profile
            </a>
        </div>
    </nav>
</header>