@model HalloDoc.DataModels.AspNetUsersLogin;

<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/patientloginpage.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
</head>

<body>

    <Partial name="_Notification" />

    <div class=" main-area d-flex h-100 w-100 position-relative">
        <div class="backgroungdimg"></div>
        <div class="top-logo h-100 w-100 ">

            <button type="button" class="btn btn-outline-info position-absolute top-0 end-0 m-3" onclick="dark_mode()"><i class="bi bi-moon moon-icon "></i></button>
            <img src="../SRS Screen Shorts/Fig56. Patient site 11.png" alt="">

            <div class="form">
                <a asp-route="PatientSite" class="back-link">&lt; Back</a>
                <h2>Login To Your Account</h2>

                <form asp-controller="Patient" asp-action="PatientLoginPage" method="post">
                    <div class="form-floating">
                        <input asp-for="UserName" type="text" class="form-control" placeholder="UserName">
                        <label class="control-label">UserName</label>
                        <i class="bi bi-person-circle user-icon icon"></i>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="PasswordHash" type="password" class="form-control" id="password" placeholder="Password">
                        <label class="control-label">Password</label>
                        <i class="bi bi-eye-slash icon" id="togglePassword"></i>
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    </div>

                    <button class="buttonlogin" type="submit">Login</button>
                    <div class="bottom-links text-center">
                        <a asp-route="ResetePatientpsw" class="forgotpsw">Forgot Password?</a>
                    </div>
                </form>
            </div>
            <div class="text-center footer">
                <a href="#" class="text-muted text-decoration-none">Terms Of Conditions</a> |
                <a href="#" class="text-muted text-decoration-none">Privacy Policy</a>
            </div>

        </div>
    </div>
    <script src="~/js/site.js"></script>
</body>

</html>